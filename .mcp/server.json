{
  "inputs": [
    {
      "type": "promptString",
      "id": "oracle-connection",
      "description": "Oracle database connection string",
      "password": true
    },
    {
      "type": "promptString",
      "id": "metadata-json-path",
      "description": "Path to metadata JSON file cache",
      "password": false
    },
    {
      "type": "promptString",
      "id": "log-file-path",
      "description": "Path to store log files",
      "password": false
    }
  ],
  "servers": {
    "Hala.DatabaseAgent.OracleMcpServer": {
      "type": "stdio",
      "command": "dnx",
      "args": [
        "Hala.DatabaseAgent.OracleMcpServer@1.0.13",
        "--yes",
        "stdio"
      ],
      "env": {
        "OracleConnectionString": "${input:oracle-connection}",
        "MetadataCacheJsonPath": "${input:metadata-json-path}",
        "LogFilePath": "${input:log-file-path}"
      }
    }
  }
}
