{
  "inputs": [
    {
      "type": "promptString",
      "id": "oracle-connection",
      "description": "Oracle database connection string",
      "password": true
    }
  ],
  "servers": {
    "Hala.DatabaseMcpAgent": {
      "type": "stdio",
      "command": "dnx",
      "args": [
        "Hala.DatabaseMcpAgent@1.0.6-preview",
        "--yes"
      ],
      "env": {
        "ConnectionStrings__OracleConnection": "${input:oracle-connection}"
      }
    }
  }
}
